<ListBox @bind-Value=StringValue Width=300 BorderThickness="1" BorderColour="Color.Dark" CornerRadius="4">
    <ListBoxItem Value=@("Apple")/>
    <ListBoxItem Value=@("Apricot") />
    <ListBoxItem Value=@("Banana") />
    <ListBoxItem Value=@("Pear") />
    <Divider />
    <ListBoxItem Value=@("Pumpkin") />
    <ListBoxItem Value=@("Potato") />
    <ListBoxItem Value=@("Zucchini") />
</ListBox>
<TextBlock HorizontalAlignment=Alignment.Center >String value = @StringValue</TextBlock>

<ListBox @bind-Value=DoubleValue Width=300 BorderThickness="1" BorderColour="Color.Dark" CornerRadius="4">
    <ListBoxItem Value=5.3 />
    <ListBoxItem Value=2.45 />
    <ListBoxItem Value=4.0 />
    <ListBoxItem Value=5.6 />
    <ListBoxItem Value=7.89 />
    <ListBoxItem Value=9.23 />
    <ListBoxItem Value=100.3 />
</ListBox>
<TextBlock HorizontalAlignment=Alignment.Center>Double value = @DoubleValue</TextBlock>

<ListBox @bind-Value=EnumValue Width=300 BorderThickness="1" BorderColour="Color.Dark" CornerRadius="4">
    @foreach (DaysOfWeek item in Enum.GetValues(typeof(DaysOfWeek)))
    {
        <ListBoxItem Text=@item.ToString() Value="@item" />
    }
</ListBox>
<TextBlock HorizontalAlignment=Alignment.Center>Enum value = @EnumValue</TextBlock>
@code {

    enum DaysOfWeek
    {
        Monday, Tuesday, Wednesday, Thursday, Friday, Saturday, Sunday
    }

    string StringValue = "Potato";
    double DoubleValue = 5.6;
    DaysOfWeek EnumValue = DaysOfWeek.Wednesday;
}