<ListBox @bind-Value=EnumValue ListData=@Data Width=300 BorderThickness="1" BorderColour="Color.Dark" CornerRadius="4" />
@code {
    public enum TestEnum
    {
        Enum1, Enum2, Enum3, Enum4
    }

    public TestEnum EnumValue { get; set; } = TestEnum.Enum3;

    List<ListDataItem<TestEnum>> Data = new List<ListDataItem<TestEnum>>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        @foreach (TestEnum item in Enum.GetValues(typeof(TestEnum)))
        {
            Data.Add(new ListDataItem<TestEnum>(item.ToString(), item));
        }
    }
}