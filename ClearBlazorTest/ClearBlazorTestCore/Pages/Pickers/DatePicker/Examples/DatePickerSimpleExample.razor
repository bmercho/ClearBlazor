@using System.ComponentModel.DataAnnotations
@using System.Globalization

<DatePicker BorderThickness=1 CornerRadius=4 @bind-Date=Date1/>
<TextBlock>@Date1</TextBlock>

<ScrollViewer HorizontalScrollMode=ScrollMode.Auto>
    <DatePicker Margin="0,0,0,10" BorderThickness=1 CornerRadius=4 Orientation=Orientation.Landscape @bind-Date=Date2 />
</ScrollViewer>
<TextBlock>@Date2</TextBlock>

@code {
    DateOnly? Date1 { get; set; } = DateOnly.FromDateTime(DateTime.Now.AddDays(5));
    DateOnly? Date2 { get; set; } = DateOnly.FromDateTime(DateTime.Now.AddDays(-5));
}