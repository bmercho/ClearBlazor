@page "/Border"
@using ClearBlazorTestCore.Pages.Border.Examples
<ScrollViewer>
    <StackPanel Padding=20 Spacing="20">
        <TextBlock FontSize="50px" FontWeight=@((int)FontWeight.Normal) Margin="20">Border</TextBlock>
        <CodeSnippet title="Basic" Description="The Grid component emulates the WPF Border component." Code=@(typeof(BorderSimpleExample).Name) BackgroundColour="@Color.BackgroundGrey">
            <WrapPanel  ColumnSpacing="20" RowSpacing="20">
                <BorderSimpleExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Code=@(typeof(BorderBoxShadowExample).Name) BackgroundColour="@Color.BackgroundGrey">
            <WrapPanel ColumnSpacing="20" RowSpacing="20" Padding="30">
                <BorderBoxShadowExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Code=@(typeof(BorderColorExample).Name) BackgroundColour="@Color.BackgroundGrey">
            <WrapPanel ColumnSpacing="20" RowSpacing="20">
                <BorderColorExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Code=@(typeof(BorderContentExample).Name) BackgroundColour="@Color.BackgroundGrey">
            <WrapPanel ColumnSpacing="20" RowSpacing="20">
                <BorderContentExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Code=@(typeof(BorderGradientBackgroundExample).Name) BackgroundColour="@Color.BackgroundGrey">
            <WrapPanel ColumnSpacing="20" RowSpacing="20">
                <BorderGradientBackgroundExample />
            </WrapPanel>
        </CodeSnippet>
    </StackPanel>
</ScrollViewer>
