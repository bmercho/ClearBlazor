@using System.ComponentModel.DataAnnotations
@using System.Globalization

@namespace ClearBlazorTest
<DatePicker BorderThickness=2 CornerRadius=4 @bind-Date=Date1 Color=Color.Secondary />
<TextBlock>@Date1</TextBlock>

<DatePicker BorderThickness=1 CornerRadius=4 @bind-Date=Date2 Color=Color.Tertiary/>
<TextBlock>@Date2</TextBlock>

@code {
    DateOnly? Date1 { get; set; } = DateOnly.FromDateTime(DateTime.Now.AddDays(3));
    DateOnly? Date2 { get; set; } = DateOnly.FromDateTime(DateTime.Now.AddDays(-3));
}