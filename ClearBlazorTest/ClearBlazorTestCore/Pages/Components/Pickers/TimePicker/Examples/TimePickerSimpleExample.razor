@using System.ComponentModel.DataAnnotations
@using System.Globalization

@namespace ClearBlazorTest
<TimePicker Margin="0,0,0,10" BorderThickness=1 CornerRadius=4 @bind-Time=Time1 />
<TextBlock>@Time1</TextBlock>

<TimePicker Margin="0,0,0,10" BorderThickness=1 CornerRadius=4 @bind-Time=Time2  MinuteStep=MinuteStep.Five/>
<TextBlock>@Time2</TextBlock>

<TimePicker Margin="0,0,0,10" BorderThickness=1 CornerRadius=4 @bind-Time=Time3 MinuteStep=MinuteStep.Fifteen />
<TextBlock>@Time3</TextBlock>

<TimePicker Margin="0,0,0,10" BorderThickness=1 CornerRadius=4 Hours24=true @bind-Time=Time4 />
<TextBlock>@Time4</TextBlock>

<TimePicker Margin="0,0,0,10" BorderThickness=1 CornerRadius=4 Orientation=Orientation.Landscape @bind-Time=Time5 />
<TextBlock>@Time5</TextBlock>

<TimePicker Margin="0,0,0,10" BorderThickness=1 CornerRadius=4 Orientation=Orientation.Landscape Hours24=true @bind-Time=Time6 />
<TextBlock>@Time6</TextBlock>
 
@code {
    TimeOnly? Time1 { get; set; } = new TimeOnly(22, 45, 0);
    TimeOnly? Time2 { get; set; } = new TimeOnly(0, 23, 0);
    TimeOnly? Time3 { get; set; } = new TimeOnly(3, 45, 0);
    TimeOnly? Time4 { get; set; } = new TimeOnly(22, 23, 0);
    TimeOnly? Time5 { get; set; } = new TimeOnly(22, 23, 0);
    TimeOnly? Time6 { get; set; } = new TimeOnly(22, 23, 0);
}