@namespace ClearBlazorTest
<WrapPanel BackgroundColor=Color.Transparent ColumnSpacing=20 Padding=20>
    <Virtualize Height=300 Width=150 CornerRadius=4 BoxShadow=4 Margin=10 Padding=10
                @ref="Virtualize" Items=@items Context=item HorizontalContentAlignment=Alignment.Start>
        <TextBlock>@item</TextBlock>
    </Virtualize>
    <Virtualize Height=300 Width=150 CornerRadius=4 BoxShadow=4 Margin=10 Padding=10
                @ref="Virtualize" Items=@items Context=item HorizontalContentAlignment=Alignment.Center>
        <TextBlock>@item</TextBlock>
    </Virtualize>
    <Virtualize Height=300 Width=150 CornerRadius=4 BoxShadow=4 Margin=10 Padding=10
                @ref="Virtualize" Items=@items Context=item HorizontalContentAlignment=Alignment.End>
        <TextBlock>@item</TextBlock>
    </Virtualize>
</WrapPanel>

@code {
    async Task Clicked()
    {
        await Virtualize.GotoIndex(10000, Alignment.Start);
    }

    ClearBlazor.Virtualize<string> Virtualize = null!;
    private IEnumerable<string> items = Enumerable.Range(1, 100000).Select(i => i.ToString()).ToArray();

}