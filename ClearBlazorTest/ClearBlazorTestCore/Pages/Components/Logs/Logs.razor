@page "/Logs"

@namespace ClearBlazorTest
<Grid Margin=10 BorderThickness="1" BorderColour="Color.Dark" CornerRadius="4">
    <ScrollViewer @ref="ScrollViewer" HorizontalScrollMode=ScrollMode.Auto>
        <ClearBlazor.Virtualize ScrollViewer=@ScrollViewer Context="item" Items=@Data ItemHeight=20>
            @item.Item1
        </ClearBlazor.Virtualize>
    </ScrollViewer>
</Grid>

@code {
    ScrollViewer ScrollViewer = null!;
    List<string> Data = new List<string>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Data = Logger.GetMessages();
    }
}
