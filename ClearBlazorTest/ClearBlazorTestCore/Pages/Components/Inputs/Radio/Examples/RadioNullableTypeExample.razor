@namespace ClearBlazorTest
<RadioGroup Label="String" @bind-Value=Value>
    <Radio Label="Item1" Value=@("String1") TItem="string?"/>
    <Radio Label="Item2" Value=@("String2") TItem="string?"/>
    <Radio Label="Item3" Value=@("String3") TItem="string?"/>
    <Radio Label="Item4" Value=@("String4") TItem="string?"/>
</RadioGroup>

<RadioGroup Label="Integer" @bind-Value=IntValue>
    <Radio Label="Int 1" Value=1 TItem="int?"/>
    <Radio Label="Int 2" Value=2 TItem="int?" />
    <Radio Label="Int 3" Value=3 TItem="int?" />
    <Radio Label="Int 4" Value=4 TItem="int?" />
</RadioGroup>

<RadioGroup Label="Boolean" @bind-Value=BoolValue>
    <Radio Label="False" Value=false TItem="bool?" />
    <Radio Label="True" Value=true TItem="bool?" />
</RadioGroup>

<RadioGroup Label="Enumeration" @bind-Value=EnumValue>
    @foreach (TestEnum item in Enum.GetValues(typeof(TestEnum)))
    {
        <Radio Label=@item.ToString() Value="@item" TItem="TestEnum?" />
    }
</RadioGroup>

@code {
    public string? Value { get; set; } = null;
    public int? IntValue { get; set; } = null;
    public bool? BoolValue { get; set; } = null;
    public TestEnum? EnumValue { get; set; } = null;

    public enum TestEnum
    {
        Enum1, Enum2, Enum3, Enum4
    }
}