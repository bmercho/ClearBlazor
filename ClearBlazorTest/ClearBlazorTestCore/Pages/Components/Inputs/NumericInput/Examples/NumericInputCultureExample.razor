@using System.Globalization
@namespace ClearBlazorTest
<StackPanel Orientation="Orientation.Landscape">
    <NumericInput Label="de-DE" Immediate=true @bind-Value="DoubleValue1" Culture="@_de" />
    <TextBlock Typo="Typo.Body1" VerticalAlignment="Alignment.Center" Margin="10,15,30,0">@DoubleValue1</TextBlock>
</StackPanel>
<StackPanel Orientation="Orientation.Landscape">
    <NumericInput Label="de-US" Immediate=true @bind-Value="DoubleValue2" Culture="@_en" />
    <TextBlock Typo="Typo.Body1" VerticalAlignment="Alignment.Center" Margin="10,15,30,0">@DoubleValue2</TextBlock>
</StackPanel>

@code {
    public double DoubleValue1 { get; set; } = 1234.5;
    public double DoubleValue2 { get; set; } = 1234.5;
    public CultureInfo _de = CultureInfo.GetCultureInfo("de-DE");
    public CultureInfo _en = CultureInfo.GetCultureInfo("en-US");
}