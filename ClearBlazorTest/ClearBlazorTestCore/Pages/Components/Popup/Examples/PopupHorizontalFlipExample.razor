@namespace ClearBlazorTest
<Grid Width="200" Height="200" BorderThickness="1" Margin="100,0,0,0">
    <Button OnClicked=@OpenPopup HorizontalAlignment=Alignment.Center VerticalAlignment=Alignment.Center>Open</Button>
    <Popup Position=PopupPosition.CentreRight Transform=PopupTransform.CentreLeft @bind-Open=@Open 
           AllowHorizontalFlip="true" AllowVerticalFlip="false">
        <StackPanel Orientation=@Orientation.Portrait BorderThickness="1" CornerRadius="4" 
                    BackgroundColour=Color.BackgroundGrey Width="300" Height="300">
            <TextBlock Margin="20">Popup content can contain anything</TextBlock>
            <Button Margin=20 OnClicked=@ClosePopup HorizontalAlignment=Alignment.Center>Close</Button>
        </StackPanel>
    </Popup>
</Grid>

@code {
    private bool Open = false;

    private void OpenPopup()
    {
        Open = true;
    }
    private void ClosePopup()
    {
        Open = false;
    }
}
