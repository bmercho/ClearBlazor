    <StackPanel Spacing="20">
        <TextBlock FontSize="50px" FontWeight=@((int)FontWeight.Normal) Margin="20">Popup</TextBlock>
        <CodeSnippet Title="Basic" Code=@(typeof(PopupSimpleExample).Name)>
            <PopupSimpleExample />
        </CodeSnippet>
        <CodeSnippet Title="Position" Code=@(typeof(PopupLocationExample).Name)>
            <PopupLocationExample />
        </CodeSnippet>
        <CodeSnippet Title="Vertical Flip" Code=@(typeof(PopupVerticalFlipExample).Name)>
            <PopupVerticalFlipExample />
        </CodeSnippet>
        <CodeSnippet Title="Horizontal Flip" Code=@(typeof(PopupHorizontalFlipExample).Name)>
            <PopupHorizontalFlipExample />
        </CodeSnippet>
    </StackPanel>
</ScrollViewer>
