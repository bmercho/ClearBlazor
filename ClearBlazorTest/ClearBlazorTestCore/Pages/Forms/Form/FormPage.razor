@page "/Form"
@using ClearBlazorTestCore.Pages.Forms.Form.Examples
<ScrollViewer>
    <StackPanel Orientation="Orientation.Portrait">
        <TextBlock FontSize="50px" FontWeight=@((int)FontWeight.Normal) Margin="20">Forms</TextBlock>
        <StackPanel Padding="20" Spacing="30">
            <CodeSnippet Title="Basic" Code=@(typeof(FormSimpleExample).Name)>
                <FormSimpleExample />
            </CodeSnippet>
            <CodeSnippet Title="Label column" Code=@(typeof(FormLabelColumnExample).Name)>
                <FormLabelColumnExample />
            </CodeSnippet>
            <CodeSnippet Title="Size" Code=@(typeof(FormSizeExample).Name)>
                <FormSizeExample />
            </CodeSnippet>
        </StackPanel>
     </StackPanel>
</ScrollViewer>
