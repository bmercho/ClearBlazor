@namespace ClearBlazorTest
@inherits ClearComponentBase

<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" class="@Classes" style="@ComputeStyle()">
        <StackPanel Spacing=20>
            <TextBlock Typo=Typo.H5 FontWeight=(int)FontWeight.Bold>Fields</TextBlock>
            @if (FieldApi == null)
            {
                <TextBlock>There are no fields defined</TextBlock>
            }
            else
            {
                <Table BorderThickness=1 CornerRadius=4 HorizontalGridLines=GridLines.All
                       Items=@FieldApi Padding=5 RowSpacing=10 ColumnDefs="auto,auto,*" ColumnSpacing=15>
                    <TableColumn Label="Name" TItem=ApiFieldInfo Field=@(x =>x.Name) />
                    <TableColumn Label="Type" TItem=ApiFieldInfo Field=@(x =>x.Type)
                                 HeaderAlignment=Alignment.Center ContentAlignment=Alignment.Center>
                        <RowTemplate Context=Item>
                            <TextBlock>@(new MarkupString(Item.Type))</TextBlock>
                        </RowTemplate>
                    </TableColumn>
                    <TableColumn Label="Description" TItem=ApiFieldInfo Field=@(x =>x.Description) />
                </Table>
            }
        </StackPanel>
    </div>
</CascadingValue>
