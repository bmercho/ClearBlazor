@namespace ClearBlazorTest
@inherits ClearComponentBase

<CascadingValue Value="this" IsFixed="false">
    <StackPanel Spacing=20>
        <TextBlock Typo=Typo.H5 FontWeight=(int)FontWeight.Bold>Fields</TextBlock>
        @if (FieldApi == null)
        {
            <TextBlock>There are no fields defined</TextBlock>
        }
        else
        {
            <Table Items=@FieldApi Padding=5 RowSpacing=10 ColumnDefs="auto,auto,auto,*" ColumnSpacing=15>
                <TableColumn Label="Name" TItem=ApiFieldInfo Field=@(x =>x.Name) />
                <TableColumn Label="Type" TItem=ApiFieldInfo Field=@(x =>x.Type) HeaderAlignment=Alignment.Center ContentAlignment=Alignment.Center />
                <TableColumn Label="Description" TItem=ApiFieldInfo Field=@(x =>x.Description) />
            </Table>
        }
    </StackPanel>
</CascadingValue>
