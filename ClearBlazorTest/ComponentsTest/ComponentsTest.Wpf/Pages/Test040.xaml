            <Border BorderBrush="Blue" BorderThickness="10" Background="Orange" Height="600" VerticalAlignment="Center"/>
            <Border BorderBrush="Green" BorderThickness="10" Background="Aqua" Height="300" VerticalAlignment="Center"/>
            <Border BorderBrush="Gray" BorderThickness="20" Width="500" Background="Pink" VerticalAlignment="Top"/>
            <Border BorderBrush="Green" BorderThickness="20" Background="Aqua" VerticalAlignment="Bottom"/>
            <Border BorderBrush="Gray" BorderThickness="20" Background="Pink" VerticalAlignment="Stretch"/>
        </StackPanel>
    </Border>
