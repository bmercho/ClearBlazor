<UserControl x:Class="ComponentsTest.Wpf.Pages.Test043"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Background="Aqua">
            <Grid Background="yellow" Height="30" />
            <Grid Background="blue" Height="30"/>
            <Grid Background="red" Height="30"/>
            <Grid Background="green" Height="30"/>
            <Grid Background="pink" Height="30"/>
            <Grid Background="orange" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top" Background="Black">
            <Grid Background="yellow" Height="30" />
            <Grid Background="blue" Height="30"/>
            <Grid Background="red" Height="30"/>
            <Grid Background="green" Height="30"/>
            <Grid Background="pink" Height="30"/>
            <Grid Background="orange" Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
