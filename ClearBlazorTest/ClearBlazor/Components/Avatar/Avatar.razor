@using Microsoft.AspNetCore.Components
@namespace ClearBlazor
@inherits ClearComponentBase

<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" class="@Classes" style="@ComputeStyle()">
        @if (!string.IsNullOrEmpty(Text))
        {
            <TextBlock Name="TextBlock in Avatar"
                       HorizontalAlignment=Alignment.Center 
                       VerticalAlignment=Alignment.Center 
                       FontSize=@FontSize 
                       FontFamily="@FontFamily"
                       FontWeight="@FontWeight"
                       FontStyle="@FontStyle"
                       Colour=@TextColour>@Text</TextBlock>
        }
        else if (!string.IsNullOrEmpty(Icon))
        {
            <MaterialIcon Name="MaterialIcon in Avatar" Size=@Size Icon=@Icon Colour=@IconColour HorizontalAlignment=Alignment.Center VerticalAlignment=Alignment.Center/>
        }
        else if (!string.IsNullOrEmpty(Image))
        {
            <Image Name="Image in Avatar" VerticalAlignment="Alignment.Center" HorizontalAlignment="Alignment.Center" Stretch="ImageStretch.UniformToFill" Source="@Image" />
        }
    </div>

</CascadingValue>


