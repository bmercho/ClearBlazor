@using Microsoft.AspNetCore.Components
@using System.Text
@using System.Text.RegularExpressions

@namespace ClearBlazor
@inherits ClearComponentBase

<CascadingValue Value="this" IsFixed="false">
    @if (PreventContextMenuDefault)
    {
        <div id="@Id" class="@Classes" style="@ComputeStyle()" @oncontextmenu:preventDefault="true"
             @onclick="OnElementClicked"
             @onmouseenter=OnElementMouseEnter
             @onmouseleave=OnElementMouseLeave>
            @ChildContent
        </div>
    }
    else
    {
        <div id="@Id" class="@Classes" style="@ComputeStyle()" 
             @onclick="OnElementClicked"
             @onmouseenter=OnElementMouseEnter
             @onmouseleave=OnElementMouseLeave>

            @ChildContent
        </div>
    }
</CascadingValue>
