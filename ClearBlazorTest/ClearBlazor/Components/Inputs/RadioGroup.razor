@namespace ClearBlazor
@typeparam TItem
@inherits InputBase

<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" class="@Classes" style="@ComputeStyle()">
        <StackPanel Name="StackPanel in TextInputBase" Orientation="Orientation.Portrait">
            @if (!string.IsNullOrEmpty(Label))
            {
                <div style=@GetLabelStyle()>@Label</div>
            }
            <Grid Columns="*,auto">
                <StackPanel Orientation=@Orientation Spacing=@Spacing>
                    @ChildContent
                    @if (RadioGroupData != null)
                    {
                        @foreach (var item in RadioGroupData)
                        {
                            <Radio Label=@item.Name Value=@item.Value/>
                        }
                    }
                </StackPanel>
                @if (ValidationErrorLocation == ValidationErrorLocation.ErrorIcon && !IsValid)
                {
                    <MaterialIcon Name="MaterialIcon in TextInputBase" Column=1 Icon="@Icons.Material.Filled.FmdBad" Size=@Size ToolTip=@ValidationMessage
                                  Colour=@Color.Error />
                }

            </Grid>
            @if (ValidationErrorLocation == ValidationErrorLocation.Inline && !IsValid)
            {
                <TextBlock Name="TextBlock in TextInputBase" TextWrapping="TextWrap.WrapOnNewLines" Colour=@Color.Error>@ValidationMessage</TextBlock>
            }
        </StackPanel>
    </div>
</CascadingValue>

