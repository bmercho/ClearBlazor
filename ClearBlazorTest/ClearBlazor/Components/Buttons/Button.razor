@using Microsoft.AspNetCore.Components
@namespace ClearBlazor
@inherits ClearComponentBase
<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" class="@Classes" style="@ComputeStyle()"
        @onclick="OnElementClicked"
        @onmouseenter="OnMouseEnter"
        @onmouseleave="OnMouseLeave">
        @if (ToolTip != null && ToolTip != string.Empty)
        {
            <ToolTip @ref="ToolTipElement" Text=@ToolTip Position=@ToolTipPosition Delay=@ToolTipDelay />
        }
        <StackPanel Orientation="Orientation.Landscape" 
                    Spacing="@Spacing" VerticalAlignment="Alignment.Center" 
                    BackgroundColour=@Color.Transparent>
            @if (Icon != null && IconLocation == IconLocation.Start)
            {
                <MaterialIcon Colour="@IconColour" Size="@Size" Icon="@Icon" />
            }
            <span style="@LabelStyle">
                @ChildContent
            </span>
            @if (Icon != null && IconLocation == IconLocation.End)
            {
                <MaterialIcon Colour="@IconColour" Size="@Size" Icon="@Icon" />
            }
        </StackPanel>
    </div>
</CascadingValue>
