@namespace ClearBlazorSkia.Tests
@using ClearBlazor
@using ClearBlazorSkia.Tests.Tests
@inherits TestBase
<RootComponent Name="Root" @ref=_rootComponent Width=800 Height=600 
               BackgroundColor=@Color.Custom("green") LayoutComplete=@LayoutComplete>
    <StackPanel Name="Stack1" Margin=10 BorderThickness=5 Padding=10 
                Orientation=StackOrientation.Vertical 
                BackgroundColor=@Color.Custom("red")>
        <Grid Name="Grid1" Height=50 BackgroundColor=@Color.Custom("yellow")/>
        <Grid Name="Grid2" Height=100 BackgroundColor=@Color.Custom("blue")/>
        <Grid Name="Grid3" Height=75 BackgroundColor=@Color.Custom("pink") />
    </StackPanel>
</RootComponent>

@code {

    RootComponent _rootComponent = null!;

    private async Task LayoutComplete()
    {
        bool testPassed = CheckComponentLocation(_rootComponent, 800, 600, 0, 0,0,0,800,600);
        var stackPanel = _rootComponent.Children[0];
        if (_rootComponent.Children.Count != 1 || !(stackPanel is StackPanel))
            testPassed = false;

        testPassed &= CheckComponentLocation(stackPanel, 780, 580, 10, 10,0,0,780,580);

        var child1 = stackPanel.Children[0];
        var child2 = stackPanel.Children[1];
        var child3 = stackPanel.Children[2];
        if (stackPanel.Children.Count != 3 || 
            !(child1 is Grid) ||
            !(child2 is Grid) ||
            !(child3 is Grid))
            testPassed = false;

        testPassed &= CheckComponentLocation(child1, 750, 50, 15, 15,0,0,750,50);
        testPassed &= CheckComponentLocation(child2, 750, 100, 15, 65,0,0,750,100);
        testPassed &= CheckComponentLocation(child3, 750, 75, 15, 165,0,0,750,75);
        await TestComplete.InvokeAsync(testPassed);
    }
}