@using Microsoft.AspNetCore.Components
@inherits ClearComponentBase
@namespace ClearBlazorTest


<div id="@Id" class="@Classes" style="@ComputeStyle()">
    <StackPanel Orientation="Orientation.Portrait">
        @if (CodeOnly)
        {
            @CodeComponent(Code)
        }
        else
        {
        @if (!string.IsNullOrEmpty(Title))
        {
            <TextBlock FontSize="22px" FontWeight=@((int)FontWeight.Bold) Margin="10,0,10,0">@Title</TextBlock>
        }
        @if (!string.IsNullOrEmpty(Description))
        {
            <TextBlock FontSize="16px" Margin="10,0,10,0">@Description</TextBlock>
        }
        <Grid Padding="5" BorderThickness=@GetBorderThickness() CornerRadius=@GetCornerRadius() BackgroundColor=@BackgroundColor>
            <Grid Margin=20>
                @ChildContent
            </Grid>
            @if (ShowCode)
            {
                <IconButton HorizontalAlignment=Alignment.End VerticalAlignment=Alignment.Start
                            Icon=@Icons.Material.Filled.CodeOff OnClicked=@HideTheCode ToolTip="Hide code" />
            }
            else
            {
                <IconButton HorizontalAlignment=Alignment.End VerticalAlignment=Alignment.Start
                            Icon=@Icons.Material.Filled.Code OnClicked=@ShowTheCode ToolTip="Show Code" />

            }
        </Grid>
        @if (ShowCode)
        {
            <Grid CornerRadius="0,0,8,8" BorderThickness="1" Padding="20">
                <ScrollViewer HorizontalScrollMode="ScrollMode.Auto" VerticalScrollMode="ScrollMode.Disabled">
                    @CodeComponent(Code)
                </ScrollViewer>
            </Grid>
        }
        }
    </StackPanel>
</div>



