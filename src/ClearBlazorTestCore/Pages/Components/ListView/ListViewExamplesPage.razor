@page "/ListView"

@using ClearBlazorTest

<DocsExamplesPage DocsInfo=@(new ListViewDocsInfo())>
    <TextBlock FontSize="50px" FontWeight=@((int)FontWeight.Normal) Margin="20">ListView</TextBlock>
      <CodeSnippet Title="ListView - VirtualizationMode:None (100 items)"
                 Code=@(typeof(NonVirtualizedListViewExample).Name)>
        <NonVirtualizedListViewExample />
    </CodeSnippet>
   
    <CodeSnippet Title="ListView - VirtualizationMode:Virtualize (5000 items)"
                 Code=@(typeof(ListViewExample).Name)>
        <ListViewExample />
    </CodeSnippet>
     <CodeSnippet Title="ListView with data provider - VirtualizationMode:Virtualize (5000 items)"
                 Code=@(typeof(ListViewDataProviderExample).Name)>
        <ListViewDataProviderExample />
    </CodeSnippet>
    <CodeSnippet Title="ListView - VirtualizationMode: InfiniteScroll (5000 items)"
                 Code=@(typeof(InfiniteScrollListViewExample).Name)>
        <InfiniteScrollListViewExample />
    </CodeSnippet>
    <CodeSnippet Title="ListView - VirtualizationMode: InfiniteScrollReverse (5000 items)"
                 Code=@(typeof(InfiniteScrollReverseListViewExample).Name)>
        <InfiniteScrollReverseListViewExample />
    </CodeSnippet>
    <CodeSnippet Title="ListView - VirtualizationMode: Pagination (5000 items)"
                 Code=@(typeof(PaginationListViewExample).Name)>
        <PaginationListViewExample />
    </CodeSnippet>
 
 </DocsExamplesPage>

