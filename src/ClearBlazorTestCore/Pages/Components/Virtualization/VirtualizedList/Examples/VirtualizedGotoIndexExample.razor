@namespace ClearBlazorTest
<StackPanel BackgroundColor=Color.Transparent HorizontalAlignment=Alignment.Start Spacing=20 Orientation=Orientation.Portrait>
    <VirtualizedList Height=300 Width=150 CornerRadius=4 BoxShadow=4 Margin=10 Padding=10
                @ref="Virtualize" Items=@items HorizontalContentAlignment=Alignment.Start>
        <RowTemplate Context="item">
             <TextBlock>@item</TextBlock>
        </RowTemplate>
    </VirtualizedList>
    <StackPanel Spacing=10 Orientation=Orientation.Landscape>
        <Button OnClicked=@OnGoto5000Start>Goto 5000 (start)</Button>
        <Button OnClicked=@OnGoto1000Center>Goto 1000 (center)</Button>
        <Button OnClicked=@OnGoto9000End>Goto 9000 (end)</Button>
    </StackPanel>
</StackPanel>

@code {
    async Task OnGoto5000Start()
    {
        await Virtualize.GotoIndex(5000, Alignment.Start);
    }

    async Task OnGoto1000Center()
    {
        await Virtualize.GotoIndex(1000, Alignment.Center);
    }

    async Task OnGoto9000End()
    {
        await Virtualize.GotoIndex(9000, Alignment.End);
    }

    VirtualizedList<string> Virtualize = null!;
    private IEnumerable<string> items = Enumerable.Range(1, 10000).Select(i => i.ToString()).ToArray();

}