@namespace ClearBlazorTest
<StackPanel BackgroundColor=Color.Transparent HorizontalAlignment=Alignment.Start Spacing=20 Orientation=Orientation.Portrait>
    <NonVirtualizedList Height=300 Width=150 CornerRadius=4 BoxShadow=4 Margin=10 Padding=10
                @ref="Virtualize" Items=@items HorizontalContentAlignment=Alignment.Start>
        <RowTemplate Context="item">
             <TextBlock>@item</TextBlock>
        </RowTemplate>
    </NonVirtualizedList>
    <StackPanel Spacing=10 Orientation=Orientation.Landscape>
        <Button OnClicked=@OnGoto1Start>Goto 1 (start)</Button>
        <Button OnClicked=@OnGoto100Center>Goto 100 (center)</Button>
        <Button OnClicked=@OnGoto200End>Goto 200 (end)</Button>
    </StackPanel>
</StackPanel>

@code {
    async Task OnGoto1Start()
    {
        await Virtualize.GotoIndex(0, Alignment.Start);
    }

    async Task OnGoto100Center()
    {
        await Virtualize.GotoIndex(100, Alignment.Center);
    }

    async Task OnGoto200End()
    {
        await Virtualize.GotoIndex(200, Alignment.End);
    }

    NonVirtualizedList<string> Virtualize = null!;
    private IEnumerable<string> items = Enumerable.Range(1, 200).Select(i => i.ToString()).ToArray();

}