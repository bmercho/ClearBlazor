@using System.ComponentModel.DataAnnotations
@using System.Globalization

@namespace ClearBlazorTest
<TimePicker Margin="0,0,10,0" BorderThickness=1 CornerRadius=4 @bind-Time=Time1 MinuteStep=MinuteStep.Five />
<TextBlock>@Time1</TextBlock>
 
<TimePicker Margin="0,0,10,0" BorderThickness=1 CornerRadius=4 @bind-Time=Time2 MinuteStep=MinuteStep.Fifteen />
<TextBlock>@Time2</TextBlock>


@code {
    TimeOnly? Time1 { get; set; } = new TimeOnly(22, 45, 0);
    TimeOnly? Time2 { get; set; } = new TimeOnly(08, 15, 0);
}