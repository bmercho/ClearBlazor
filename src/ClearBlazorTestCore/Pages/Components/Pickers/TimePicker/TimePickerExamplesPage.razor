@page "/TimePicker"
@using ClearBlazorTest
<DocsExamplesPage DocsInfo=@(new TimePickerDocsInfo())>
    <TextBlock FontSize="50px" FontWeight=@((int)FontWeight.Normal) Margin="20">Time Picker</TextBlock>
    <StackPanel Padding="5" Spacing="30">
        <CodeSnippet Title="Basic" Description="This is an example of basic usage" Code=@(typeof(TimePickerSimpleExample).Name)>
            <StackPanel Margin="5" Spacing="20" Orientation=Orientation.Portrait>
                <TimePickerSimpleExample />
            </StackPanel>
        </CodeSnippet>
        <CodeSnippet Title="Minute Step of 5 and 15" Code=@(typeof(TimePickerMinuteStepExample).Name)>
            <StackPanel Margin="5" Spacing="20" Orientation=Orientation.Portrait>
                <TimePickerMinuteStepExample />
            </StackPanel>
        </CodeSnippet>
        <CodeSnippet Title="24 Hour" Code=@(typeof(TimePicker24HourExample).Name)>
            <StackPanel Margin="5" Spacing="20" Orientation=Orientation.Portrait>
                <TimePicker24HourExample />
            </StackPanel>
        </CodeSnippet>
    </StackPanel>
</DocsExamplesPage>
