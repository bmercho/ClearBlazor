@namespace ClearBlazorTest
<ListBox HorizontalAlignment=Alignment.Start @bind-Values=StringValues MultiSelect=true Width=300 BorderThickness="1"
         BorderColor="Color.Dark" CornerRadius="4">
    <ListBoxItem Value=@("Apple")/>
    <ListBoxItem Value=@("Apricot") />
    <ListBoxItem Value=@("Banana") />
    <ListBoxItem Value=@("Pear") />
    <Divider />
    <ListBoxItem Value=@("Pumpkin") />
    <ListBoxItem Value=@("Potato") />
    <ListBoxItem Value=@("Zucchini") />
</ListBox>
<TextBlock HorizontalAlignment=Alignment.Center >String values = @string.Join(", ",StringValues)</TextBlock>

<ListBox HorizontalAlignment=Alignment.Start @bind-Values=DoubleValues MultiSelect=true Width=300 BorderThickness="1" BorderColor="Color.Dark" CornerRadius="4">
    <ListBoxItem Value=5.3 />
    <ListBoxItem Value=2.45 />
    <ListBoxItem Value=4.0 />
    <ListBoxItem Value=5.6 />
    <ListBoxItem Value=7.89 />
    <ListBoxItem Value=9.23 />
    <ListBoxItem Value=100.3 />
</ListBox>
<TextBlock HorizontalAlignment=Alignment.Center>Double values = @string.Join(", ", DoubleValues)</TextBlock>

<ListBox @bind-Value=EnumValue MultiSelect=true Width=300 BorderThickness="1" BorderColor="Color.Dark" CornerRadius="4">
    @foreach (DaysOfWeek item in Enum.GetValues(typeof(DaysOfWeek)))
    {
        <ListBoxItem Text=@item.ToString() Value="@item" />
    }
</ListBox>
<TextBlock HorizontalAlignment=Alignment.Center>Enum value = @EnumValue</TextBlock>
@code {

    [Flags]
    enum DaysOfWeek
    {
        Monday=1, Tuesday=2, Wednesday=4, Thursday=8, Friday=16, Saturday=32, Sunday=64
    }

    List<string> StringValues = new() { "Potato", "Apricot" } ;
    List<double> DoubleValues = new() { 5.6, 4.0 };
    DaysOfWeek EnumValue = DaysOfWeek.Wednesday | DaysOfWeek.Friday;
}
