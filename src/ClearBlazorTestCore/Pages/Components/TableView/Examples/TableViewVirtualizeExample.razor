@namespace ClearBlazorTest
@using Data
<StackPanel Orientation=Orientation.Portrait>
    <TextBlock HorizontalAlignment=Alignment.Start Typo=Typo.H4>Table View</TextBlock>
    <TextBlock HorizontalAlignment=Alignment.Start>VirtualizationMode:Virtualization (5000 rows)</TextBlock>
    <TableView TItem=TestListRow CornerRadius=4 BorderThickness=1 Margin=10 Padding=10 Height=500
               RowSpacing=0 ColumnSpacing=10
               VirtualizeMode=VirtualizeMode.Virtualize
               RowHeight=45
               Items=@_localListRows
               HorizontalGridLines=GridLines.All
               VerticalGridLines=GridLines.All
               HoverHighlight=false
               ShowLoadingSpinner=true
               HorizontalScrollbar=true>
        <TableColumn Label="First Name" VerticalContentAlignment=Alignment.Center
                     TItem=TestListRow Field=@(x =>x.FirstName) ColumnDefinition=100 />
        <TableColumn Label="Last Name" VerticalContentAlignment=Alignment.Center
                     TItem=TestListRow Field=@(x =>x.LastName) ColumnDefinition=120 />
        <TableColumn Label="Product" VerticalContentAlignment=Alignment.Center
                     TItem=TestListRow Field=@(x =>x.Product) ColumnDefinition=170 />
        <TableColumn Label="UnitPrice" VerticalContentAlignment=Alignment.Center
                     TItem=TestListRow Field=@(x =>x.UnitPrice) ColumnDefinition=80>
            <DataTemplate Context=item>
                <TextBlock VerticalAlignment=Alignment.Center TextAlignment=Alignment.Start>$@(item.UnitPrice.ToString("0.00"))</TextBlock>
            </DataTemplate>
        </TableColumn>
        <TableColumn Label="Notes" VerticalContentAlignment=Alignment.Center
                     TItem=TestListRow Field=@(x =>x.Notes)>
            <DataTemplate Context=item>
                <TextBlock VerticalAlignment=Alignment.Center TextWrapping=TextWrap.NoWrap TextTrimming=false>@(item.Notes)</TextBlock>
            </DataTemplate>
        </TableColumn>
    </TableView>
</StackPanel>

@code {

    List<TestListRow> _localListRows = ClientData.LocalTestListRows5000;

}