@namespace ClearBlazorTest
<Select Label="Icons" @bind-Value=EnumValue>
    <SelectItem Value=TestEnum.Enum1 Text="Broken heart" Icon=@Icons.Material.Filled.HeartBroken />
    <SelectItem Value=TestEnum.Enum2 Text="Heart monitor" Icon=@Icons.Material.Filled.MonitorHeart />
    <SelectItem Value=TestEnum.Enum3 Text="Air" Icon=@Icons.Material.Filled.Air />
    <SelectItem Value=TestEnum.Enum4 Text="Airlines" Icon=@Icons.Material.Filled.Airlines />
</Select>
<Select Label="Avatars" @bind-Value=EnumValue>
    <SelectItem Value=TestEnum.Enum1 Text="Inbox" Avatar=@Icons.Material.Filled.Inbox />
    <SelectItem Value=TestEnum.Enum2 Text="Send" Avatar=@Icons.Material.Filled.Send />
</Select>
@code {
    public enum TestEnum
    {
        Enum1, Enum2, Enum3, Enum4
    }

    public TestEnum EnumValue { get; set; } = TestEnum.Enum2;
}