@namespace ClearBlazorTest
<TextInput Placeholder="None" Label="Label" InputContainerStyle="InputContainerStyle.LabelOnly" @bind-Value="TextValue" />
<TextInput Placeholder="Underlined" Label="Label" InputContainerStyle="InputContainerStyle.Underlined" @bind-Value="TextValue" />
<TextInput Placeholder="Outlined" Label="Label" InputContainerStyle="InputContainerStyle.Outlined" @bind-Value="TextValue" />
<TextInput Placeholder="Filled" Label="Label" InputContainerStyle="InputContainerStyle.Filled" @bind-Value="TextValue" />

<TextInput Placeholder="Very Small" Label="Label" InputContainerStyle="InputContainerStyle.Outlined" @bind-Value="TextValue" Size="Size.VerySmall" />
<TextInput Placeholder="Small" Label="Label" InputContainerStyle="InputContainerStyle.Outlined" @bind-Value="TextValue" Size="Size.Small" />
<TextInput Placeholder="Normal" Label="Label" InputContainerStyle="InputContainerStyle.Outlined" @bind-Value="TextValue" Size="Size.Normal" />
<TextInput Placeholder="Large" Label="Label" InputContainerStyle="InputContainerStyle.Outlined" @bind-Value="TextValue" Size="Size.Large" />
<TextInput Placeholder="Very Large" Label="Label" InputContainerStyle="InputContainerStyle.Outlined" @bind-Value="TextValue" Size="Size.VeryLarge" />

@code {
    public string TextValue { get; set; } = string.Empty;
}