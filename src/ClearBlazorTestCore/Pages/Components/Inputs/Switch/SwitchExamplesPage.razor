@page "/Switch"
@using ClearBlazorTest
<DocsExamplesPage DocsInfo=@(new SwitchDocsInfo())>
    <TextBlock FontSize="50px" FontWeight=@((int)FontWeight.Normal) Margin="20">Switch</TextBlock>
    <StackPanel Padding="20" Spacing="30">
        <CodeSnippet Title="Basic" Code=@(typeof(SwitchSimpleExample).Name)>
            <WrapPanel Margin="10" ColumnSpacing="20">
                <SwitchSimpleExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Title="Disabled" Code=@(typeof(SwitchDisabledExample).Name)>
            <WrapPanel Margin="10" ColumnSpacing="20">
                <SwitchDisabledExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Title="ReadOnly" Code=@(typeof(SwitchReadonlyExample).Name)>
            <WrapPanel Margin="10" ColumnSpacing="20">
                <SwitchReadonlyExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Title="Size" Code=@(typeof(SwitchSizeExample).Name)>
            <WrapPanel Margin="10" ColumnSpacing="20">
                <SwitchSizeExample />
            </WrapPanel>
        </CodeSnippet>
        <CodeSnippet Title="Label" Code=@(typeof(SwitchLabelExample).Name)>
            <StackPanel Orientation=Orientation.Portrait Margin="10" Spacing="20">
                <SwitchLabelExample />
            </StackPanel>
        </CodeSnippet>
    </StackPanel>
</DocsExamplesPage>