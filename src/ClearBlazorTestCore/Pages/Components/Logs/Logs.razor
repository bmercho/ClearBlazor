@page "/Logs"

@namespace ClearBlazorTest
<Grid Margin=10 BorderThickness="1" BorderColor="Color.Dark" CornerRadius="4">
    <ClearBlazor.Virtualize Context="item" Items=@Data ItemHeight=20>
        @item
    </ClearBlazor.Virtualize>
</Grid>

@code {
    ScrollViewer ScrollViewer = null!;
    List<string> Data = new List<string>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Data = Logger.GetMessages();
    }
}
