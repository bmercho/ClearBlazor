@page "/Logs"

@namespace ClearBlazorTest
<Grid Margin=10 BorderThickness=1 CornerRadius=4>
     <ListView Items=@Data RowHeight=20>
        <RowTemplate Context=item>
            @item.Message
        </RowTemplate>
    </ListView>
</Grid>

@code {
    List<LogItem> Data = new List<LogItem>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Data = Logger.GetMessages();
    }
}
