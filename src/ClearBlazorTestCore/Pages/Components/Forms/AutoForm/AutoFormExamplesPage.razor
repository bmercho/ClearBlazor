@page "/AutoForm"
@using ClearBlazorTest
<DocsExamplesPage DocsInfo=@(new AutoFormDocsInfo())>
    <TextBlock FontSize="50px" FontWeight=@((int)FontWeight.Normal) Margin="20">Auto Forms</TextBlock>
    <StackPanel Padding="20" Spacing="30">
        <CodeSnippet Title="Basic" Code=@(typeof(AutoFormSimpleExample).Name)>
            <AutoFormSimpleExample />
        </CodeSnippet>
        <CodeSnippet Title="Underlined with no label column" Code=@(typeof(AutoFormNoLabelColumnAndUnderlinedExample).Name)>
            <AutoFormNoLabelColumnAndUnderlinedExample />
        </CodeSnippet>
    </StackPanel>
</DocsExamplesPage>