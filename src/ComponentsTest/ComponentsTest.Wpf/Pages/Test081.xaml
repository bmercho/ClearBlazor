<UserControl x:Class="ComponentsTest.Wpf.Pages.Test081"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="red" BorderThickness="10" Background="yellow" Width="400" Height="300" Margin="20">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Background="aqua" Orientation="Vertical">
                <Border BorderBrush="Blue" BorderThickness="10" Background="Orange" Width="200" HorizontalAlignment="Center" />
                <Border BorderBrush="Green" BorderThickness="10" Background="Aqua" Width="300" HorizontalAlignment="Center" />
                <Border BorderBrush="Gray" BorderThickness="20" Height="500" Background="Pink" HorizontalAlignment="Left" />
                <Border BorderBrush="Green" BorderThickness="20" Background="Aqua" HorizontalAlignment="Right" />
                <Border BorderBrush="Gray" BorderThickness="20" Background="Pink" HorizontalAlignment="Stretch" />
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
