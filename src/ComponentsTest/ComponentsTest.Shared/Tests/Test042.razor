<Grid Rows="*,*">
    <StackPanel Row="0" Orientation="Orientation.Portrait">
        <Grid BackgroundColour=@Color.Custom("yellow") Height="30" />
        <Grid BackgroundColour=@Color.Custom("blue") Height="30" HorizontalAlignment="Alignment.Center" />
        <Grid BackgroundColour=@Color.Custom("red") Height="30" Width="200" HorizontalAlignment="Alignment.Center" />
        <Grid BackgroundColour=@Color.Custom("green") Height="30" Width="200" HorizontalAlignment="Alignment.Start" />
        <Grid BackgroundColour=@Color.Custom("pink") Height="30" Width="200" HorizontalAlignment="Alignment.End" />
        <Grid BackgroundColour=@Color.Custom("orange") Height="30" HorizontalAlignment="Alignment.Stretch" />
    </StackPanel>
    <StackPanel Row="1" Orientation="Orientation.Landscape">
        <Grid BackgroundColour=@Color.Custom("yellow") Width="30" />
        <Grid BackgroundColour=@Color.Custom("blue") Width="30" VerticalAlignment="Alignment.Center" />
        <Grid BackgroundColour=@Color.Custom("red") Width="30" Height="200" VerticalAlignment="Alignment.Center" />
        <Grid BackgroundColour=@Color.Custom("green") Width="30" Height="200" VerticalAlignment="Alignment.Start" />
        <Grid BackgroundColour=@Color.Custom("pink") Width="30" Height="200" VerticalAlignment="Alignment.End" />
        <Grid BackgroundColour=@Color.Custom("orange") Width="30" VerticalAlignment="Alignment.Stretch" />
    </StackPanel>
</Grid>

