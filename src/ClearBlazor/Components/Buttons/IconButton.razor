@using Microsoft.AspNetCore.Components
@namespace ClearBlazor
@inherits Button
<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" class=@Classes style=@ComputeStyle() disabled=@GetDisabledState()
            @onclick=@OnElementClicked
            @onmouseenter=@OnMouseEnter 
            @onmouseleave=@OnMouseLeave>
        @if (ToolTip != null && ToolTip != string.Empty)
        {
            <ToolTip @ref="ToolTipElement" Text=@ToolTip Position=@ToolTipPosition 
                     Delay=@ToolTipDelay />
        }
        <MaterialIcon Color=@_iconColor Size=@IconSize Icon="@Icon" />
    </div>
</CascadingValue>


