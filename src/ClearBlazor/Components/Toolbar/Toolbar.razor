@namespace ClearBlazor
@inherits ClearComponentBase

<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" style=@ComputeStyle() class="@Classes">
        <StackPanel Orientation=@Orientation>
            @if (@IsInToolbarTray)
            {
                <IconButton Style="cursor: move; " 
                            IconColor=@ThemeManager.CurrentColorScheme.OnSurface 
                            Icon="@Icons.Material.Filled.DragIndicator" />
            }
            @ChildContent
        </StackPanel>
    </div>
    @if (NewLine)
    {
        <div style="flex-basis:100%; order:@(Order+1);"></div>
    }

</CascadingValue>
