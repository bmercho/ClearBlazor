@namespace ClearBlazor
@inherits ClearComponentBase

<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" @attributes=AdditionalAttributes style="@ComputeStyle()" class="@Classes"
         @onmouseenter=OnElementMouseEnter
         @onmouseleave=OnElementMouseLeave>
        @ChildContent
    </div>
</CascadingValue>

