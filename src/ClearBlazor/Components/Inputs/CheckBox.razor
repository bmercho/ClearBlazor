@namespace ClearBlazor
@typeparam TItem
@inherits InputBase

<CascadingValue Value="this" IsFixed="false">
    <div id="@Id" @attributes=AdditionalAttributes class="@Classes" style="@ComputeStyle()">
        <StackPanel Orientation="Orientation.Landscape"
                    HorizontalAlignment=Alignment.Start 
                    VerticalAlignment=Alignment.Start>
            @if (Label != null && LabelLocation == LabelLocation.Start)
            {
                <TextBlock VerticalAlignment=Alignment.Center>@Label</TextBlock>
            }
            <IconButton Disabled=@IsDisabled IconColor="@Color" Icon=@GetIcon() Size="@Size" @onclick=@OnIconClicked />
            @if (Label != null && LabelLocation == LabelLocation.End)
            {
                <TextBlock Color=@Color VerticalAlignment=Alignment.Center>@Label</TextBlock>
            }
        </StackPanel>
    </div>
</CascadingValue>


